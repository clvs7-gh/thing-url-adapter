{
  "author": "Mozilla IoT",
  "description": "Native web thing support",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0",
      "enabled": true
    }
  },
  "homepage_url": "https://github.com/mozilla-iot/thing-url-adapter",
  "id": "thing-url-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Web Thing",
  "options": {
    "default": {
      "urls": [],
      "pollInterval": 5,
      "isThrottleRequests": false,
      "throttleLimit": 3
    },
    "schema": {
      "type": "object",
      "required": [
        "urls",
        "pollInterval",
        "isThrottleRequests",
        "throttleLimit"
      ],
      "properties": {
        "urls": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "pollInterval": {
          "description": "The interval, in seconds, at which to poll property values.",
          "type": "number"
        },
        "isThrottleRequests": {
          "description": "Whether throttle requests.",
          "type": "boolean"
        },
        "throttleLimit": {
          "description": "Number of throttle limit.",
          "type": "number"
        }
      }
    }
  },
  "short_name": "Web Thing",
  "version": "0.4.7"
}
